<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="br.edu.ifrs.projetoexemplomd.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_categoria"
        android:name="br.edu.ifrs.projetoexemplomd.ui.fragment.CategoriaListFragment"
        android:label="@string/menu_categoria"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/nav_cadastro_usuario"
        android:name="br.edu.ifrs.projetoexemplomd.ui.activities.CadastroUsuarioActivity"
        android:label="@string/txtCadastrar"
        tools:layout="@layout/activity_cadastro_usuario" />

     <activity
        android:id="@+id/nav_info"
        android:name="br.edu.ifrs.projetoexemplomd.ui.activities.InfoActivity"
        android:label="detalhes"
        tools:layout="@layout/activity_info" />

    <fragment
        android:id="@+id/nav_dica"
        android:name="br.edu.ifrs.projetoexemplomd.ui.fragment.DicaFragment"
        android:label="@string/menu_dicas"
        tools:layout="@layout/fragment_dica" />

    <fragment
        android:id="@+id/nav_phone"
        android:name="br.edu.ifrs.projetoexemplomd.ui.fragment.TelefoneFragment"
        android:label="@string/menu_telefonesUteis"
        tools:layout="@layout/fragment_list_telefone" />

    <fragment
        android:id="@+id/bottomnavhome"
        android:name="br.edu.ifrs.projetoexemplomd.ui.tools.ToolsFragment"
        android:label="@string/txtHome"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/bottomnavcategoria"
        android:name="br.edu.ifrs.projetoexemplomd.ui.tools.ToolsFragment"
        android:label="@string/txtHome"
        tools:layout="@layout/fragment_tools" />

</navigation>